<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LaboratorioCalificado02"
        tools:targetApi="31">

        <!-- Ejercicio02Activity ahora es la actividad principal -->
        <activity
            android:name=".Ejercicio02Activity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- DetailActivity sigue siendo accesible, pero no es la actividad principal -->
        <activity
            android:name=".DetailActivity"
            android:exported="false" />

        <!-- Ejercicio01Activity sigue siendo accesible, pero no es la actividad principal -->
        <activity
            android:name=".Ejercicio01Activity"
            android:exported="false" />

        <!-- MainActivity sigue siendo accesible, pero no es la actividad principal -->
        <activity
            android:name=".MainActivity"
            android:exported="true" />

    </application>

</manifest>
